//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "gui_calc.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::NumEvent(TObject *Sender)
{
		TButton* b = ((TButton*)Sender);
		if (Display->Text =="0")
		{
			Display->Text = b->Caption;
		}
		else
		{
			Display->Text = Display->Text + b->Caption;
		}
}
//---------------------------------------------------------------------------
